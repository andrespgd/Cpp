#include <boost/algorithm/string.hpp>
#include <iostream>
#include <string>
#include <vector>

using namespace std;

int main(){

  string line("test1\ttest2\ttest3");
  vector<string> strs;
  boost::split(strs,line,boost::is_any_of("\t"));

  cout << "size of the vector= " << strs.size() << endl;
  for (size_t i = 0; i < strs.size(); i++)
      cout << strs[i] << endl;

  return 0;
}
